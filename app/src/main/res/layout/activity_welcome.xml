<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Welcome">
    <android.support.v7.widget.CardView
        android:id="@+id/imagecard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0b0b09"
        app:cardBackgroundColor="#0b0b09"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/spring"
            />
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="30sp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:text="Hi "
        android:layout_below="@id/imagecard"
        android:layout_toLeftOf="@id/centreAlign"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textColor="#d88c1b"
        android:layout_below="@id/imagecard"
        android:layout_toRightOf="@id/centreAlign"
        android:textAlignment="center"
        android:textSize="30sp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"

        />
    <TextView
        android:id="@+id/centreAlign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imagecard"/>
    <!-- android:layout_below="@id/imageView"-->
    <TextView
        android:layout_weight="1"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_below="@+id/name"
        android:text="91SpringBoard Welcome's you!"
        android:padding="16dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FINISH"
        android:background="#d88c1b"
        android:layout_gravity="bottom"
        android:textColor="#fff"
        android:textSize="20sp"
        android:id="@+id/finish"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>